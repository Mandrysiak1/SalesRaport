<div class="form__input row align-items-center">
    <div class="col-3"><label for="service-select">Usługa</label></div>
    <div class="col-9">
        <select class="form-select przesylki-input" aria-label="Usługa" id="service-select">
            <option value="Paczkomaty InPost" <%= value === 'Paczkomaty 24/7 - Przesyłka standardowa' ? 'selected' : '' %>>Paczkomaty 24/7 - Przesyłka standardowa</option>
            <optgroup label="Przesyłki Allegro InPost">
                <option value="Allegro Paczkomaty 24/7 InPost" <%= value === 'Allegro Paczkomaty 24/7 InPost' ? 'selected' : '' %>>Allegro Paczkomaty 24/7 InPost</option>
                <option value="Allegro miniKurier24 InPost" <%= value === 'Allegro miniKurier24 InPost' ? 'selected' : '' %>>Allegro miniKurier24 InPost</option>
                <option value="Allegro Kurier24 InPost" <%= value === 'Allegro Kurier24 InPost' ? 'selected' : '' %>>Allegro Kurier24 InPost</option>
                <option value="5" <%= value === 'InPost Kurier Standard (C2C)' ? 'selected' : '' %>>InPost Kurier Standard (C2C)</option>
            </optgroup>
            <option value="6">Przesyłka paczkomatowa 'Podaj Dalej'</option>
        </select>
    </div>
</div>

<div class="form__input form__input--radios row align-items-center">
    <div class="col-3"><label for="size">Rozmiar</label></div>
    <div class="col-9">
        <div class="form-check">
            <input class="form-check-input przesylki-radio" type="radio" name="size" id="gabarytA" value="A" checked>
            <label class="form-check-label" for="gabarytA">
                Gabaryt A (8 x 38 x 64 cm)
            </label>
          </div>
          <div class="form-check">
            <input class="form-check-input przesylki-radio" type="radio" name="size" value="B" id="gabarytB">
            <label class="form-check-label" for="gabarytB">
                Gabaryt B (19 x 38 x 64 cm)
            </label>
          </div>
          <div class="form-check">
            <input class="form-check-input przesylki-radio" type="radio" name="size" value="C" id="gabarytC">
            <label class="form-check-label" for="gabarytC">
                Gabaryt C (41 x 38 x 64 cm)
            </label>
          </div>
          <div class="form-check">
            <input class="form-check-input przesylki-radio" type="radio" name="size" value="D" id="gabarytD">
            <label class="form-check-label" for="gabarytD">
                Gabaryt D (50 x 50 x 80 cm) - tylko InPost Kurier Standard (C2C)
            </label>
          </div>
    </div>
</div>


<div class="form__input row align-items-center">
    <div class="col-3"><label for="cod-input">Pobranie</label></div>
    <div class="col-9">
        <div class="input-group">
            <input type="text" class="form-control przesylki-input" aria-label="Pobranie" aria-describedby="cod-label" id="cod-input">
            <span class="input-group-text" id="cod-label">PLN</span>
        </div>
    </div>
</div>

<div class="form__input row align-items-center">
    <div class="col-3"><label for="insurance-input">Ubezpieczenie</label></div>
    <div class="col-9">
        <div class="input-group">
            <input type="text" class="form-control przesylki-input" aria-label="Ubezpieczenie" aria-describedby="insurance-label" id="insurance-input" value="<%= insurance %>">
            <span class="input-group-text" id="insurance-label">PLN</span>
        </div>
    </div>
</div>

<div class="form__input row align-items-center">
    <div class="col-3"><label for="contents-input" class="form-label" id="contents-label">Opis zawartości</label></div>
    <div class="col-9">
        <input type="text" class="form-control przesylki-input" id="contents-input" aria-describedby="contents-label" value="Nie rzucać">
    </div>
</div>

<button type="button" class="btn btn-primary" id="paczkomaty-btn">Dodaj</button>